{
  "name": "civic-trust-registry",
  "version": "1.0.0",
  "description": "On-chain enforcement layer for Energy Dispatch Assurance Instruments (EDAIs)",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:testnet": "hardhat run scripts/deploy.js --network testnet",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "verify": "hardhat verify",
    "coverage": "hardhat coverage",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "demo": "node demo-dashboard.js",
    "cli": "ts-node registry_cli.ts",
    "key-gen": "python ctr_registry_key.py"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "solidity",
    "smart-contracts",
    "compliance",
    "enforcement",
    "edai",
    "energy",
    "dispatch",
    "assurance"
  ],
  "author": "CivicTrust Team",
  "license": "MIT",
  "dependencies": {
    "@noble/hashes": "^1.3.0",
    "@noble/secp256k1": "^1.7.1",
    "@openzeppelin/contracts": "^5.4.0",
    "commander": "^11.1.0",
    "dotenv": "^17.2.1",
    "ethers": "^6.8.0",
    "hardhat": "^2.19.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
